<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="xkcd_comics.Views.ComicPage"
             Title="{Binding Title}">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="10*"/>
                <RowDefinition Height="5*"/>
                <RowDefinition Height="10*"/>
                <RowDefinition Height="75*"/>
            </Grid.RowDefinitions>
            <Label Text="{Binding Comic.Title}"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   FontSize="28"
                   FontAttributes="Bold"
                   Grid.Row="0"
                   Grid.ColumnSpan="2"/>
            <Label Text="{Binding Comic.Num, StringFormat='#{0}'}"
                   HorizontalOptions="Center"
                   VerticalOptions="Start"
                   FontSize="20"
                   Grid.Row="1"
                   Grid.ColumnSpan="2"/>
            <Button Text="Give me more"
                    Grid.Row="2"
                    Grid.Column="0"
                    Command="{Binding GetRandomComicCommand}"/>
            <Button Text="Add to favorites"
                    Grid.Row="2"
                    Grid.Column="1"/>
            <ImageButton Source="{Binding Comic.Img}"
                         Aspect="AspectFit"
                         Grid.Row="3"
                         Grid.ColumnSpan="2"
                         BackgroundColor="Transparent"/>
            <!--<Image Source="{Binding Img}"
                   Aspect="AspectFit"
                   Grid.Row="2"/>-->
        </Grid>
    </ContentPage.Content>
</ContentPage>